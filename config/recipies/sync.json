{
    "name": "sync",
    "targets": {
        "to_location": {
            "map": "remote_name",
            "default": "origin"
        }
    },
    "hooks": {
        "pull": {
            "options": [
                "branch"
            ]
        }
    },
    "options": {
        "branch": {
            "short_flag": "-b",
            "long_flag": "--branch",
            "map": "remote_branch",
            "default": "main"
        },
        "message": {
            "short_flag": "-m",
            "long_flag": "--message",
            "required": true,
            "map": "commit_message"
        },
        "files": {
            "short_flag": "-f",
            "long_flag": "--files",
            "required": false,
            "map": "files"
        },
        "untracked": {
            "short_flag": "-u",
            "long_flag": "--untracked",
            "requied": false,
            "map": "untracked"
        }
    },
    "commands": {
        "add": {
            "options": [
                "files",
                "untracked"
            ]
        },
        "commit": {
            "options": [
                "message"
            ]
        },
        "push": {
            "targets": [
                "to_location"
            ],
            "options": [
                "branch"
            ],
            "hooks": {
                "on_success": [
                    "pull"
                ]
            }
        }
    },
    "recipe": [
        "add",
        "commit",
        "push"
    ]
}